     * @param to The recipient of the tokens
     * @param tokenId The ID of the token for given contractAddress
     * @param amount The amount of tokens to send
     */
    function sendERC1155(address contractAddress, address to, uint256 tokenId, uint256 amount) public onlyOwner {
        IERC1155(contractAddress).safeTransferFrom(address(this), to, tokenId, amount, "");
    }

    /**
     * @dev Send ERC1155 tokens to a recipient
     *
     * @param contractAddress The address of the ERC1155 contract
     * @param to The recipient of the tokens
     * @param tokenIds The IDs of the tokens for given contractAddress
     * @param amounts The amounts of tokens to send
     */
    function sendERC1155Batch(address contractAddress, address to, uint256[] memory tokenIds, uint256[] memory amounts)
        public
        onlyOwner
    {
        IERC1155(contractAddress).safeBatchTransferFrom(address(this), to, tokenIds, amounts, "");
    }

    /**
     * @dev Send ERC1155 tokens to a recipient
     *
     * @param contractAddress The address of the ERC1155 contract
     * @param to The recipient of the tokens
     * @param startTokenId The ID of the first token for given contractAddress
     * @param endTokenId The ID of the last token for given contractAddress
     */
    function sendERC1155Range(address contractAddress, address to, uint256 startTokenId, uint256 endTokenId)
        public
        onlyOwner
    {
        require(startTokenId <= endTokenId, "Start token ID should be less than or equal to end token ID");

        uint256 tokenCount = endTokenId - startTokenId + 1;
        uint256[] memory ids = new uint256[](tokenCount);
        uint256[] memory amounts = new uint256[](tokenCount);

        for (uint256 i = 0; i < tokenCount; i++) {
            uint256 tokenId = startTokenId + i;
            ids[i] = tokenId;
            amounts[i] = IERC1155(contractAddress).balanceOf(address(this), tokenId);
        }

        IERC1155(contractAddress).safeBatchTransferFrom(address(this), to, ids, amounts, "");
    }

    // The ERC165 standard requires contracts to implement onERC1155Received
    function onERC1155Received(address, address, uint256, uint256, bytes calldata)
        public
