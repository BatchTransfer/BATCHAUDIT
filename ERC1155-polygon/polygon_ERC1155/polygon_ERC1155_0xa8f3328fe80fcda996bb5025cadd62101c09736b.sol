    string public name = "MarmottoShow";
    string public symbol = "MMS";

    using Strings for uint;

    uint256 public currentId = 0;

    mapping(uint256 => Token) public tokenById;
    mapping(address => mapping(uint256 => bool)) public hasMint;

    event NewTokenCreated(
        uint256 tokenId,
        string name,
        string artistName,
        string artistLink,
        string uri,
        uint256 price,
        bool useWhitelist
    );
    event NewTokenMinted(uint256 tokenId, address minter);
    event TokenMintOpened(uint256 tokenId);
    event TokenMintClosed(uint256 tokenId);

    constructor(
        address initialOwner,
        address signer
    ) OffChainWhitelist(signer) ERC1155("") Ownable(initialOwner) {}

    // @dev see {IMarmottoShow-createToken}
    function createToken(
        string memory _name,
        string memory _artistName,
        string memory _artistLink,
        string memory _image,
        uint256 _price,
        bool _useWhitelist
    ) public onlyOwner {
        tokenById[currentId] = Token({
            id: currentId,
            isOpen: false,
            useWhitelist: _useWhitelist,
            currentSupply: 0,
            price: _price,
            name: _name,
            artistName: _artistName,
            artistLink: _artistLink,
            image: _image
        });

        emit NewTokenCreated(
            currentId,
            _name,
            _artistName,
            _artistLink,
            _image,
            _price,
            _useWhitelist
        );

        currentId++;
    }

    // @dev see {IMarmottoShow-mintToken}
    function mintToken(
        uint256 _tokenId,
        bytes calldata _signature
    ) external payable {
        Token storage currentToken = tokenById[_tokenId];

        require(
            currentToken.isOpen,
            "MarmottoShow: Token is not open for minting"
        );
        require(
            !hasMint[msg.sender][_tokenId],
            "MarmottoShow: Address has already minted this token"
        );

        if (currentToken.useWhitelist) {
            require(
                verify(msg.sender, _tokenId, _signature),
                "MarmottoShow: Address is not whitelisted for this token"
            );
        }

        if (currentToken.price > 0) {
            require(
                msg.value >= currentToken.price,
                "MarmottoShow: Incorrect payment amount"
            );
        }

        hasMint[msg.sender][_tokenId] = true;
        tokenById[_tokenId].currentSupply++;
        _mint(msg.sender, _tokenId, 1, "");

        emit NewTokenMinted(_tokenId, msg.sender);
    }

    // @dev see {IMarmottoShow-totalSupply}
    function totalSupply() public view returns (uint256) {
        return currentId;
    }

    // @dev see {IMarmottoShow-tokensList}
    function tokensList() external view returns (Token[] memory) {
        Token[] memory tokens = new Token[](currentId);
        for (uint256 i = 0; i < currentId; i++) {
            tokens[i] = tokenById[i];
        }
        return tokens;
    }

    // @dev see {IMarmottoShow-getPrice}
    function getPrice(uint256 _tokenId) public view returns (uint256) {
        return tokenById[_tokenId].price;
    }

    // @dev see {IERC1155-uri}
    function uri(
        uint256 _tokenId
    ) public view override returns (string memory) {
        require(currentId >= _tokenId, "MarmottoShow: Token does not exist");

        string memory token_name = tokenById[_tokenId].name;
        string memory image = tokenById[_tokenId].image;
        string memory artistName = tokenById[_tokenId].artistName;
        string memory artistLink = tokenById[_tokenId].artistLink;

        string memory json = Base64.encode(
            bytes(
                string(
                    abi.encodePacked(
                        '{"name": "',
                        token_name,
                        '", "image": "',
                        image,
                        '", "description": "By ',
                        artistName,
                        ". You can see more here : ",
                        artistLink,
                        ' .", "attributes": [{"trait_type": "Current Supply", "value": "',
                        tokenById[_tokenId].currentSupply.toString(),
                        '"}]}'
                    )
                )
            )
        );

        return string(abi.encodePacked("data:application/json;base64,", json));
    }

    // @dev see {IMarmottoShow-toggleMintState}
    function toggleMintState(uint256 _tokenId) external onlyOwner {
        tokenById[_tokenId].isOpen = !tokenById[_tokenId].isOpen;

        if (tokenById[_tokenId].isOpen) {
            emit TokenMintOpened(_tokenId);
        } else {
            emit TokenMintClosed(_tokenId);
        }
    }

    // @dev see {IMarmottoShow-toggleUseWhitelist}
    function toggleUseWhitelist(uint256 _tokenId) external onlyOwner {
        tokenById[_tokenId].useWhitelist = !tokenById[_tokenId].useWhitelist;
    }

    // @dev see {IMarmottoShow-updateTokenMetadata}
    function updateTokenMetadata(
        uint256 _tokenId,
        string memory _name,
        string memory _artistName,
        string memory _artistLink,
        string memory _image
    ) external onlyOwner {
        tokenById[_tokenId].name = _name;
        tokenById[_tokenId].artistName = _artistName;
        tokenById[_tokenId].artistLink = _artistLink;
        tokenById[_tokenId].image = _image;
    }

    // @dev see {IMarmottoShow-updateTokenPrice}
    function updateTokenPrice(
        uint256 _tokenId,
        uint256 _price
    ) external onlyOwner {
        tokenById[_tokenId].price = _price;
    }

    // @dev see {IMarmottoShow-withdraw}
    function withdraw() external onlyOwner {
        payable(msg.sender).transfer(address(this).balance);
    }

    // @dev see {IERC165-supportsInterface}.
    function supportsInterface(
        bytes4 interfaceId
    ) public view virtual override(ERC1155, ERC2981) returns (bool) {
        return super.supportsInterface(interfaceId);
    }

    // @dev see {IMarmottoShow-setDefaultRoyalty}
    function setDefaultRoyalty(
        address receiver,
        uint96 feeNumerator
    ) external onlyOwner {
        _setDefaultRoyalty(receiver, feeNumerator);
    }
}


